#
# Config Attack Graphs Styles
#
# Node types:
#   - host: Network machines (box3d shape)
#   - vulnerability: CVEs/weaknesses (diamond shape)
#   - privilege: Access levels (ellipse shape)
#   - service: Running services (component shape)
#
# Edge types:
#   - edge: General edges
#   - network_edge: Network connectivity (dashed)
#   - exploit_edge: Exploit paths (bold)
#

# =============================================================================
# Default Style - Clean professional look
# =============================================================================
[ag_default]
graph = {rankdir = "LR", bgcolor = "white", fontname = "Arial", splines = "ortho", nodesep = "0.5", ranksep = "0.8"}
host = {shape = "box3d", style = "filled", fillcolor = "#4a90d9", fontcolor = "white", fontname = "Arial", fontsize = "11", margin = "0.15"}
vulnerability = {shape = "diamond", style = "filled", fillcolor = "#e74c3c", fontcolor = "white", fontname = "Arial", fontsize = "10", margin = "0.1"}
privilege = {shape = "ellipse", style = "filled", fillcolor = "#f39c12", fontcolor = "white", fontname = "Arial", fontsize = "10", margin = "0.1"}
service = {shape = "component", style = "filled", fillcolor = "#27ae60", fontcolor = "white", fontname = "Arial", fontsize = "10", margin = "0.1"}
edge = {color = "#34495e", fontname = "Arial", fontsize = "9"}
network_edge = {color = "#3498db", style = "dashed", fontname = "Arial", fontsize = "9", penwidth = "1.5"}
exploit_edge = {color = "#e74c3c", style = "bold", fontname = "Arial", fontsize = "9", penwidth = "2"}

# =============================================================================
# Dark - Dark theme with high contrast
# =============================================================================
[ag_dark]
