privilege = {shape = "ellipse", style = "filled", fillcolor = "#3d2914", fontcolor = "#feca57", fontname = "Arial", fontsize = "10", penwidth = "2", color = "#feca57"}
service = {shape = "component", style = "filled", fillcolor = "#1e3a2c", fontcolor = "#5ed98a", fontname = "Arial", fontsize = "10", penwidth = "2", color = "#5ed98a"}
edge = {color = "#6c757d", fontname = "Arial", fontsize = "9", fontcolor = "#aaa"}
network_edge = {color = "#4a90d9", style = "dashed", fontname = "Arial", fontsize = "9", penwidth = "1.5", fontcolor = "#4a90d9"}
