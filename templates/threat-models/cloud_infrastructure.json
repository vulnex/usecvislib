    },
    "developers": {
      "label": "Developers"
    },
    "admin": {
      "label": "Cloud Admin"
    }
  },
  "processes": {
    "cdn": {
      "label": "CDN (CloudFront/CloudFlare)"
    },
    "load_balancer": {
      "label": "Load Balancer"
    },
    "web_server_1": {
      "label": "Web Server 1"
    },
    "web_server_2": {
      "label": "Web Server 2"
    },
    "app_server": {
      "label": "Application Server"
    },
    "lambda_function": {
      "label": "Serverless Function"
    },
    "bastion_host": {
      "label": "Bastion Host"
    }
  },
  "datastores": {
    "rds_primary": {
      "label": "RDS Primary"
    },
    "rds_replica": {
      "label": "RDS Read Replica"
    },
    "s3_bucket": {
      "label": "S3 Storage"
    },
    "elasticache": {
      "label": "ElastiCache"
    },
    "secrets_manager": {
      "label": "Secrets Manager"
    }
  },
  "dataflows": {
    "users_to_cdn": {
      "from": "internet_users",
      "to": "cdn",
      "label": "HTTPS"
    },
    "cdn_to_lb": {
      "from": "cdn",
      "to": "load_balancer",
      "label": "HTTPS (Origin)"
    },
    "lb_to_web1": {
      "from": "load_balancer",
      "to": "web_server_1",
      "label": "HTTP (Internal)"
    },
    "lb_to_web2": {
      "from": "load_balancer",
      "to": "web_server_2",
      "label": "HTTP (Internal)"
    },
    "web1_to_app": {
      "from": "web_server_1",
      "to": "app_server",
      "label": "Internal API"
    },
    "web2_to_app": {
      "from": "web_server_2",
      "to": "app_server",
      "label": "Internal API"
    },
    "app_to_rds": {
      "from": "app_server",
      "to": "rds_primary",
      "label": "SQL (TLS)"
    },
    "rds_replication": {
      "from": "rds_primary",
      "to": "rds_replica",
      "label": "Replication"
    },
    "app_to_cache": {
      "from": "app_server",
      "to": "elasticache",
      "label": "Redis Protocol"
    },
    "app_to_s3": {
      "from": "app_server",
      "to": "s3_bucket",
      "label": "S3 API"
    },
    "app_to_lambda": {
      "from": "app_server",
      "to": "lambda_function",
      "label": "Invoke"
    },
    "app_to_secrets": {
      "from": "app_server",
      "to": "secrets_manager",
      "label": "Get Secret"
    },
    "dev_to_bastion": {
      "from": "developers",
      "to": "bastion_host",
      "label": "SSH"
    },
    "bastion_to_app": {
      "from": "bastion_host",
      "to": "app_server",
      "label": "SSH"
    },
    "admin_to_console": {
      "from": "admin",
      "to": "secrets_manager",
      "label": "IAM/Console Access"
    }
  },
  "boundaries": {
    "internet": {
      "label": "Internet",
      "elements": [
        "internet_users",
        "developers",
        "admin"
      ]
    },
    "edge": {
      "label": "Edge Network",
      "elements": [
        "cdn"
      ]
    },
    "public_subnet": {
      "label": "Public Subnet",
      "elements": [
        "load_balancer",
        "bastion_host"
      ]
    },
    "private_subnet": {
      "label": "Private Subnet",
      "elements": [
        "web_server_1",
        "web_server_2",
        "app_server",
        "lambda_function"
      ]
    },
    "data_subnet": {
      "label": "Data Subnet",
      "elements": [
        "rds_primary",
        "rds_replica",
        "elasticache",
        "s3_bucket",
        "secrets_manager"
      ]
    }
  },
  "threats": {
    "iam_privilege_escalation": {
      "element": "iam_roles",
      "threat": "IAM privilege escalation via misconfigured policies",
      "mitigation": "Least privilege, regular IAM audits, policy validation",
      "cvss_vector": "CVSS:3.1/AV:N/AC:L/PR:L/UI:N/S:C/C:H/I:H/A:N"
    },
    "ssrf_metadata": {
      "element": "web_servers",
      "threat": "SSRF to cloud metadata service for credential theft",
      "mitigation": "IMDSv2, network segmentation, SSRF protection",
      "cvss_vector": "CVSS:3.1/AV:N/AC:L/PR:N/UI:N/S:C/C:H/I:L/A:N"
    },
    "s3_public_exposure": {
      "element": "object_storage",
      "threat": "S3 bucket publicly accessible with sensitive data",
      "mitigation": "Block public access, bucket policies, access logging",
      "cvss": 9.1
    },
    "vpc_misconfiguration": {
      "element": "network_layer",
      "threat": "VPC security group allowing unauthorized access",
      "mitigation": "Security group audits, flow logs, network ACLs",
      "cvss_vector": "CVSS:3.1/AV:N/AC:L/PR:N/UI:N/S:U/C:H/I:N/A:N"
    },
    "container_vulnerability": {
      "element": "container_services",
      "threat": "Container image with known critical vulnerabilities",
      "mitigation": "Image scanning, base image updates, runtime protection",
      "cvss_vector": "CVSS:3.1/AV:N/AC:L/PR:N/UI:N/S:U/C:H/I:H/A:H"
    }
  }
}